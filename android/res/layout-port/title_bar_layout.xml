<merge
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_height="48dp"
        android:layout_width="match_parent"
        android:orientation="horizontal"  android:background="@drawable/actionbar_bg">

    <RelativeLayout android:id="@+id/back_container" android:layout_width="48dp" android:clickable="true" android:layout_height="48dp" android:background="@drawable/btn_item_bg">
          <ImageView
           android:id="@+id/back_imageview"
           android:layout_width="15dp"
           android:layout_height="15dp"
           android:background="@drawable/title_icon_arrow"
           android:layout_centerInParent="true"
           android:scaleType="centerInside"/>
    </RelativeLayout>

    <TextView
            android:id="@+id/titlebar_title"
            android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:textColor="@color/common_text_color"
            android:ellipsize="end"
            android:layout_gravity="center_vertical"
            android:paddingLeft="0dp"
            android:textSize="16sp"
            android:singleLine="true"/>

    <RelativeLayout android:layout_width="match_parent" android:layout_height="wrap_content">
        <EditText android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:singleLine="true"
                  android:layout_toLeftOf="@+id/title_bar_search"
                  android:id="@+id/album_search"
                  android:visibility="gone"
                  android:layout_centerVertical="true"
                  android:hint="请输入搜索关键字"/>

        <ImageView android:id="@id/title_bar_search"
                   android:layout_width="48dp"
                   android:layout_height="48dp"
                   android:background="@drawable/icon_menu_search_normal"
                   android:layout_alignParentRight="true"
                   android:scaleType="centerCrop"
                   android:visibility="invisible"/>

        <ImageView android:id="@+id/title_bar_tv_connected"
                   android:layout_width="48dp"
                   android:layout_height="48dp"
                   android:background="@drawable/ic_tv_connected"
                   android:layout_alignParentRight="true"
                   android:scaleType="centerCrop"
                   android:visibility="invisible"/>
    </RelativeLayout>
    <View android:layout_width="match_parent" android:layout_height="1dp" android:background="@drawable/actionbar_bg_line"/>

</merge>